<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="325dp"
    android:layout_height="122dp"
    tools:context=".fragments.RewardTableFragment"
    android:background="@drawable/rectangle_2"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/header_rewards_cup"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/loyalty_car"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="@string/loyalty_car"
            android:textAppearance="@style/loyalty_car"
            android:gravity="top"
            />
        <TextView
            android:id="@+id/some_id"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="21dp"
            android:text="@string/some_id"
            android:textAppearance="@style/some_id"
            android:gravity="top"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rectangle_1"
        android:layout_below="@+id/header_rewards_cup"
        android:layout_alignLeft="@+id/header_rewards_cup"

        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:orientation="horizontal">



        <androidx.recyclerview.widget.RecyclerView
            android:gravity="center"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:minHeight="60dp"
            android:id="@+id/recycler_view_rewards"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</RelativeLayout>